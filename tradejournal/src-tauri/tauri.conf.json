{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tradejournal",
  "version": "0.1.0",
  "identifier": "com.monet.tradejournal",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Trading Journal",
        "width": 1200,
        "height": 800
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "windows": ["main"],
          "permissions": [
            "sql:allow-load",
            "sql:allow-execute",
            "sql:allow-select",
            "sql:allow-close",
            "sql:default"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:trading_journal.db"],
      "scope": {
        "allowed": [
          {
            "database": "sqlite:trading_journal.db"
          }
        ]
      }
    }
  }
}